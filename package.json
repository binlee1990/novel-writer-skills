{
  "name": "novel-writer-skills",
  "version": "1.2.0",
  "type": "module",
  "description": "Claude Code 专用的 AI 小说创作工具 - 深度集成 Slash Commands 和 Agent Skills",
  "keywords": [
    "novel",
    "writer",
    "chinese",
    "ai",
    "creative-writing",
    "claude",
    "claude-code",
    "agent-skills",
    "小说",
    "创作",
    "写作"
  ],
  "author": "Novel Writer Team",
  "license": "MIT",
  "main": "dist/cli.js",
  "bin": {
    "novelws": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "node -e \"try{require('fs').chmodSync('dist/cli.js',0o755)}catch{}\"",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "clean": "rm -rf dist",
    "prepare": "npm run build",
    "test": "jest --config jest.config.cjs",
    "test:watch": "jest --config jest.config.cjs --watch",
    "test:coverage": "jest --config jest.config.cjs --coverage",
    "test:unit": "jest --config jest.config.cjs tests/unit",
    "test:integration": "jest --config jest.config.cjs tests/integration"
  },
  "dependencies": {
    "@commander-js/extra-typings": "^12.0.0",
    "chalk": "^5.3.0",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.2.12",
    "js-yaml": "^4.1.0",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.9",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "files": [
    "dist",
    "templates",
    "plugins",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/binlee1990/novel-writer-skills.git"
  },
  "homepage": "https://github.com/binlee1990/novel-writer-skills#readme",
  "bugs": {
    "url": "https://github.com/binlee1990/novel-writer-skills/issues"
  }
}
